/*commom-style*/

@main_color:#fb870d;
@font_color:#333;
@font_color2:#666;
@font_color3:#999;
@blue_color:#4c91f8;
.border_1px(bottom){
    position: relative;
    &:after{
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        border-top: 1px solid #e8e8e8;
    };
    @media (-webkit-min-device-pixel-ratio: 1.5) {
        &:after{
            transform: scaleY(0.7)
        }
    }

    @media (-webkit-min-device-pixel-ratio: 2) {
        &:after{
            transform: scaleY(0.5)
        }
    }
}
.border_1px(top){
    position: relative;
    &:before{
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        border-top: 1px solid #e8e8e8;
    };
    @media (-webkit-min-device-pixel-ratio: 1.5) {
        &:before{
            transform: scaleY(0.7)
        }
    }

    @media (-webkit-min-device-pixel-ratio: 2) {
        &:before{
            transform: scaleY(0.5)
        }
    }
}

.button{
    width: 6.2rem;
    height: 0.88rem;
    border-radius: 0.08rem;
    margin:0 auto;
    font-size: 0.32rem;
    color: #fff;
}

.order_btn{
    position: fixed;
    bottom: 0;
    z-index: 99;
    width: 100%;
    height: 1.18rem;
    background-color: #fff;
    button{
        width: 6.6rem;
        height: 0.88rem;
        background-color: @main_color;
        color: #fff;
        font-size: 0.32rem;
        margin:0.15rem auto;
    }
}

.form_btn{
    width: 100%;
    height: 0.88rem;
    display: block;
    line-height: 0.88rem;
    text-align: center;
    font-size: 0.32rem;
    color: @main_color;
}

